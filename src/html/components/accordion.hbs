<div class="accordion">
  <animated-element opacity="0,1" translate-x="200%, 0" style="display:block; inline-size:fit-content;" times="0, 1"><h2>FAQ</h2></animated-element>
  <animated-element opacity="0,1">
  <div class="accordion__items">
    {{#each items}}
      <div class="accordion__item">
          <button id="trigger--{{@index}}" class="accordion__item-trigger" aria-expanded="{{#if @first}}true{{else}}false{{/if}}" id="trigger-{{id}}" aria-controls="panel-{{id}}">
            <h3 class="accordion__item-title">{{title}}</h3>
            <div class="accordion__item-icon">
            {{>icon name="plus" className="accordion__item-icon-plus" iconSize="24"}}
            {{>icon name="minus" className="accordion__item-icon-minus" iconSize="24"}}
            </div>
          </button>
          <a>
      <animated-timeline triggered-by="trigger--{{@index}}" trigger-type="click">
        <animated-element at="0"></animated-element>
        <animated-element at="1"></animated-element>
        <animated-element at="2"></animated-element>
      </animated-timeline>
      </a>



        <toggle-element id="panel-{{@index}}" hide class="accordion__item-panel" in-opacity="0,1" out-opacity="1,0" in-max-block-size='0, 1000px' out-max-block-size='1000px, 0' duration="1">
        <div id="panel-{{id}}" role="region" aria-labelledby="trigger-{{id}}" class="accordion__item-panel">
          <div class="accordion__item-content">
            <p>{{{content}}}</p>
          </div>
        </div>
        </toggle-element>
      </div>
    {{/each}}
  </div>
  </animated-element>
</div>  
